<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <TextView
            android:id="@+id/title_tv"
            android:text="点击下方快速登录"
            android:textColor="#ff424242"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/weixin_iv"
            android:src="@drawable/ic_icon_login_weichat"
            android:layout_width="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="124dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/title_tv"
            android:layout_height="42dp" />

        <ImageView
            android:id="@+id/weibo_iv"
            android:src="@drawable/ic_icon_login_weibo"
            android:layout_width="42dp"
            android:layout_below="@+id/title_tv"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="124dp"
            android:layout_height="42dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:src="@drawable/ic_icon_notloggedin"
            android:layout_width="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_height="44dp" />
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Joseph Martinez"
            android:textColor="#ff424242"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_need"
            android:text="我要求片"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view1"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_share"
            android:text="分享APP"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view2"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_clean"
            android:text="清除缓存"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view3"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_declare"
            android:text="免责声明"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view4"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_update"
            android:text="检查更新"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view5"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_loggout"
            android:text="退出登录"
            android:textColor="#ff000000"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp" />
        <View
            android:id="@+id/view6"
            android:layout_below="@+id/tv_update"
            android:background="#f5f5f5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</LinearLayout>