<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_pic"
        android:layout_width="138dp"
        android:layout_height="78dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="138dp"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:placeholderImage="@drawable/default_image_tv" />

        <View
            android:layout_width="138dp"
            android:layout_alignParentBottom="true"
            android:layout_height="22dp"
            android:background="@drawable/ucrop_shadow_upside" />

        <TextView
            android:id="@+id/update_tv"
            android:text="更新至23集"
            android:textColor="#ffffffff"
            android:textSize="8sp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/score"
            android:text="8.0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/big_tv"
        android:text="西虹市首富"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:textColor="#ff4a4a4a"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/rl_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/small_des"
        android:layout_toRightOf="@+id/rl_pic"
        android:layout_below="@+id/big_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:text="混迹于丙级业余足球队"
        android:textColor="#ff9b9b9b"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/rl_pic"
        android:layout_below="@+id/small_des"
        android:id="@+id/category_tv"
        android:text="电影 | 内地"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:textColor="#ff9b9b9b"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/new_iv"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/category_tv"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="新"
        android:textColor="@color/white"
        android:textSize="7dp"
        android:background="@drawable/bg_theme"
        android:layout_toRightOf="@+id/rl_pic"
        android:layout_width="12dp"
        android:layout_height="12dp" />

</RelativeLayout>