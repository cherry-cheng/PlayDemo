<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_rl"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:placeholderImage="@drawable/default_image_tv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ucrop_shadow_upside" />
        <TextView
            android:id="@+id/searial_number"
            android:text="更新至23集"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/score"
            android:text="7.0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_big_title"
        android:layout_width="wrap_content"
        android:layout_below="@+id/top_rl"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:text="媚者无疆"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="#ff4a4a4a"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_area_title"
        android:text="我已此生 赌你一人"
        android:textColor="#ffbbbfc8"
        android:layout_below="@+id/tv_big_title"
        android:textSize="10sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>